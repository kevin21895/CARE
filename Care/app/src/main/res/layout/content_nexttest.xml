<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_nexttest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kevin.care.Nexttest"
    tools:showIn="@layout/activity_nexttest">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.5"
    android:orientation="vertical"
    android:id="@+id/ll1">

        <Button
            android:id="@+id/see"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:onClick="see"
            android:text="See Child" />

</LinearLayout>

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/child"
                            android:layout_weight="0.5"
                            android:onClick="rad"
                            android:text="Radius" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/button2"
                            android:layout_weight="0.5"
                            android:onClick="emergency"
                            android:text="Emergency Services" />
        <Button
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/button3"
            android:layout_weight="0.5"
            android:onClick="showmap"
            android:text="Maps"


            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical"
                            android:id="@+id/ll2">

                                <Button
                                    android:id="@+id/panic"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:onClick="panic"
                                    android:text="Panic Button" />

                        </LinearLayout>
                        <Button
                            android:id="@+id/logout"
                            android:layout_below="@id/panic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:onClick="logout"
                            android:text="Logout" />


                </LinearLayout>
        </ScrollView>


</LinearLayout>
